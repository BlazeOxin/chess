{
  "name": "chess",
  "version": "1.0.0",
  "description": "",
  "main": "main/electron.js",
  "scripts": {
    "e:start": "electron .",
    "start": "webpack --mode development frontend/index.tsx -o public/app.bundle.js && electron .",
    "dev": "concurrently \"webpack --mode development frontend/index.tsx -o public/app.bundle.js --watch\" \"electron .\"",
    "w:build": "webpack --mode production frontend/index.tsx -o public/app.bundle.js",
    "build": "electron-builder"
  },
  "author": "Nomaan Akhtar",
  "license": "ISC",
  "build": {
    "appId": "com.company.app",
    "productName": "appName",
    "copyright": "Copyright Â© 2020 App",
    "win": {
      "target": "nsis",
      "icon": "assets/icons/icon.ico"
    },
    "mac": {
      "target": "default",
      "icon": "assets/icons/icon.icns"
    },
    "linux": {
      "target": "AppImage",
      "icon": "assets/icons/icon.png"
    },
    "extraFiles": [
      {
        "from": "assets",
        "to": "assets",
        "filter": [
          "**/*"
        ]
      },
      {
        "from": "public",
        "to": "public",
        "filter": [
          "**/*"
        ]
      }
    ]
  },
  "dependencies": {
    "@types/electron": "^1.6.10",
    "@types/react": "^16.9.46",
    "@types/react-dom": "^16.9.8",
    "@types/react-router-dom": "^5.1.5",
    "concurrently": "^5.3.0",
    "react": "^16.13.1",
    "react-dom": "^16.13.1",
    "react-router-dom": "^5.2.0",
    "typescript": "^3.9.7"
  },
  "devDependencies": {
    "css-loader": "^4.2.1",
    "electron-builder": "^22.8.0",
    "file-loader": "^6.0.0",
    "node-sass": "^4.14.1",
    "sass-loader": "^9.0.3",
    "style-loader": "^1.2.1",
    "ts-loader": "^8.0.2",
    "webpack": "^4.44.1",
    "webpack-cli": "^3.3.12"
  }
}
